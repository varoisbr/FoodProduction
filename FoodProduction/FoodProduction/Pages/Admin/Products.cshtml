@page
@model ProductsAdminModel
@{
    ViewData["Title"] = "Manage Products";
}

<div class="container-fluid mt-5">
    <div class="row">
        <div class="col-md-12">
            <h1 class="mb-4">Product Management</h1>

            <!-- Create/Edit Product Form -->
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">@(Model.EditingProductId > 0 ? "Edit" : "Add New") Product</h5>
                </div>
                <div class="card-body">
                    <form method="post" class="row g-3">
                        @if (Model.EditingProductId > 0)
                        {
                            <input type="hidden" name="editingProductId" value="@Model.EditingProductId" />
                        }

                        <div class="col-md-4">
                            <label for="productName" class="form-label">Product Name</label>
                            <input type="text" class="form-control" id="productName" name="productName"
                                   value="@Model.ProductName" required />
                        </div>

                        <div class="col-md-4">
                            <label for="defaultGainPercentage" class="form-label">Default Gain % </label>
                            <input type="number" class="form-control" id="defaultGainPercentage" name="defaultGainPercentage"
                                   value="@Model.DefaultGainPercentage" step="0.01" />
                        </div>

                        <div class="col-md-4">
                            <label for="labelTemplateId" class="form-label">Default Label Template</label>
                            <select class="form-select" id="labelTemplateId" name="labelTemplateId">
                                <option value="">-- Select Template --</option>
                                @foreach (var template in Model.LabelTemplates)
                                {
                                    <option value="@template.Id" selected="@(Model.LabelTemplateId == template.Id)">
                                        @template.Name
                                    </option>
                                }
                            </select>
                        </div>

                        <div class="col-12">
                            <button type="submit" class="btn btn-primary" name="action" value="save">
                                <i class="bi bi-check-circle"></i> @(Model.EditingProductId > 0 ? "Update" : "Create") Product
                            </button>
                            @if (Model.EditingProductId > 0)
                            {
                                <button type="submit" class="btn btn-secondary" name="action" value="cancel">Cancel</button>
                            }
                        </div>
                    </form>
                </div>
            </div>

            <!-- Products List -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Products</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Default Gain %</th>
                                    <th>Default Template</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var product in Model.Products)
                                {
                                    <tr>
                                        <td>#@product.Id</td>
                                        <td>@product.Name</td>
                                        <td>@product.DefaultGainPercentage.ToString("F2")%</td>
                                        <td>@(product.DefaultLabelTemplate?.Name ?? "None")</td>
                                        <td class="text-center">
                                            <form method="post" asp-page-handler="Edit" style="display:inline;">
                                                <input type="hidden" name="id" value="@product.Id" />
                                                <button type="submit" class="btn btn-sm btn-warning">
                                                    <i class="bi bi-pencil"></i> Edit
                                                </button>
                                            </form>
                                            <form method="post" asp-page-handler="Delete" style="display:inline;">
                                                <input type="hidden" name="id" value="@product.Id" />
                                                <button type="submit" class="btn btn-sm btn-danger"
                                                        onclick="return confirm('Delete this product?');">
                                                    <i class="bi bi-trash"></i> Delete
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
