@page
@model LabelTemplatesAdminModel
@{
    ViewData["Title"] = "Manage Label Templates";
}

<div class="container-fluid mt-5">
    <div class="row">
        <div class="col-md-12">
            <h1 class="mb-4">Label Template Management</h1>

            <!-- Create/Edit Template Form -->
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">@(Model.EditingTemplateId > 0 ? "Edit" : "Create New") ZPL Label Template</h5>
                </div>
                <div class="card-body">
                    <form method="post" class="row g-3">
                        @if (Model.EditingTemplateId > 0)
                        {
                            <input type="hidden" name="editingTemplateId" value="@Model.EditingTemplateId" />
                        }

                        <div class="col-md-6">
                            <label for="templateName" class="form-label">Template Name</label>
                            <input type="text" class="form-control" id="templateName" name="templateName"
                                   value="@Model.TemplateName" required />
                        </div>

                        <div class="col-12">
                            <label for="templateContent" class="form-label">ZPL Content</label>
                            <small class="form-text text-muted">Placeholders: {ProductName}, {Weight}, {Price}, {Date}</small>
                            <textarea class="form-control" id="templateContent" name="templateContent" rows="10"
                                      required style="font-family: monospace;">@Model.TemplateContent</textarea>
                        </div>

                        <div class="col-12">
                            <button type="submit" class="btn btn-primary" name="action" value="save">
                                <i class="bi bi-check-circle"></i> @(Model.EditingTemplateId > 0 ? "Update" : "Create") Template
                            </button>
                            @if (Model.EditingTemplateId > 0)
                            {
                                <button type="submit" class="btn btn-secondary" name="action" value="cancel">Cancel</button>
                            }
                        </div>
                    </form>

                    @if (!string.IsNullOrEmpty(Model.TemplateName))
                    {
                        <hr />
                        <h6 class="mt-3">Template Preview (with sample data)</h6>
                        <pre class="bg-light p-3" style="overflow-x: auto; font-size: 11px;">@(Model.TemplateContent ?? "No template content")</pre>
                    }
                </div>
            </div>

            <!-- Templates List -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Label Templates</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Created</th>
                                    <th class="text-end">Used by Products</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var template in Model.Templates)
                                {
                                    <tr>
                                        <td>#@template.Id</td>
                                        <td>@template.Name</td>
                                        <td>@template.CreatedAt.ToString("yyyy-MM-dd")</td>
                                        <td class="text-end">@template.Products.Count</td>
                                        <td class="text-center">
                                            <form method="post" asp-page-handler="Edit" style="display:inline;">
                                                <input type="hidden" name="id" value="@template.Id" />
                                                <button type="submit" class="btn btn-sm btn-warning">
                                                    <i class="bi bi-pencil"></i> Edit
                                                </button>
                                            </form>
                                            @if (template.Products.Count == 0)
                                            {
                                                <form method="post" asp-page-handler="Delete" style="display:inline;">
                                                    <input type="hidden" name="id" value="@template.Id" />
                                                    <button type="submit" class="btn btn-sm btn-danger"
                                                            onclick="return confirm('Delete this template?');">
                                                        <i class="bi bi-trash"></i> Delete
                                                    </button>
                                                </form>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
