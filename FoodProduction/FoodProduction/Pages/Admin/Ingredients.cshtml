@page
@model IngredientsAdminModel
@{
    ViewData["Title"] = "Manage Ingredients";
}

<div class="container-fluid mt-5">
    <div class="row">
        <div class="col-md-12">
            <h1 class="mb-4">Ingredient Management</h1>

            <!-- Create/Edit Ingredient Form -->
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">@(Model.EditingIngredientId > 0 ? "Edit" : "Add New") Ingredient</h5>
                </div>
                <div class="card-body">
                    <form method="post" class="row g-3">
                        @if (Model.EditingIngredientId > 0)
                        {
                            <input type="hidden" name="editingIngredientId" value="@Model.EditingIngredientId" />
                        }

                        <div class="col-md-6">
                            <label for="ingredientName" class="form-label">Ingredient Name</label>
                            <input type="text" class="form-control" id="ingredientName" name="ingredientName"
                                   value="@Model.IngredientName" required />
                        </div>

                        <div class="col-md-6">
                            <label for="costPerKg" class="form-label">Cost per KG ($)</label>
                            <input type="number" class="form-control" id="costPerKg" name="costPerKg"
                                   value="@Model.CostPerKg" step="0.01" min="0" required />
                        </div>

                        <div class="col-12">
                            <button type="submit" class="btn btn-primary" name="action" value="save">
                                <i class="bi bi-check-circle"></i> @(Model.EditingIngredientId > 0 ? "Update" : "Create") Ingredient
                            </button>
                            @if (Model.EditingIngredientId > 0)
                            {
                                <button type="submit" class="btn btn-secondary" name="action" value="cancel">Cancel</button>
                            }
                        </div>
                    </form>
                </div>
            </div>

            <!-- Ingredients List -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Ingredients</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th class="text-end">Cost per KG</th>
                                    <th class="text-end">Used in Products</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var ingredient in Model.Ingredients)
                                {
                                    <tr>
                                        <td>#@ingredient.Id</td>
                                        <td>@ingredient.Name</td>
                                        <td class="text-end">@ingredient.CostPerKg.ToString("C2")</td>
                                        <td class="text-end">@ingredient.ProductFormulations.Count</td>
                                        <td class="text-center">
                                            <form method="post" asp-page-handler="Edit" style="display:inline;">
                                                <input type="hidden" name="id" value="@ingredient.Id" />
                                                <button type="submit" class="btn btn-sm btn-warning">
                                                    <i class="bi bi-pencil"></i> Edit
                                                </button>
                                            </form>
                                            @if (ingredient.ProductFormulations.Count == 0)
                                            {
                                                <form method="post" asp-page-handler="Delete" style="display:inline;">
                                                    <input type="hidden" name="id" value="@ingredient.Id" />
                                                    <button type="submit" class="btn btn-sm btn-danger"
                                                            onclick="return confirm('Delete this ingredient?');">
                                                        <i class="bi bi-trash"></i> Delete
                                                    </button>
                                                </form>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
